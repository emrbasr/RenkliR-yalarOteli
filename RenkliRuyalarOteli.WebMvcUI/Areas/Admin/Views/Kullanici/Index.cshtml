@model List<Kullanici>
<a asp-action="Create" asp-controller="Kullanici" class="btn btn-primary">Yeni Kayit</a>
<div class="card">
    <div class="card-header">
        <h3>Kullanicilar</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Kullanici Kodu</td>
                    <td>Adi</td>
                    <td>Soyadi</td>
                    <td>Email</td>
                    <td>Role</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Kullanici Kullanici in Model)
                {
                    <tr>
                        <td>@Kullanici.Id</td>
                        <td>@Kullanici.Adi</td>
                        <td>@Kullanici.Soyadi</td>
                        <td>@Kullanici.Email</td>
                        <td>@Kullanici.Roller.FirstOrDefault()</td>
                        <td><a asp-action="Update" asp-controller="Kullanici" class="btn btn-success" asp-route-Id="@Kullanici.Id">Update</a> </td>
                        <td><a asp-action="Delete" asp-controller="Kullanici" class="btn btn-danger" asp-route-Id="@Kullanici.Id">Delete</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>